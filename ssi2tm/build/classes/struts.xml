<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<!-- Add packages here -->
	<package name="main" extends="struts-default">
		<action name="index">
			<result>frame/userLogin.jsp</result>
		</action>
		<action name="login" class="loginAction">
			<result name="success">welcome.jsp</result>
			<result name="input">frame/userLogin.jsp</result>
		</action>
		<action name="logout" class="logoutAction">
			<result name="success">frame/userLogin.jsp</result>
		</action>
		
		<action name="userlogin" class="loginAction">
			<result name="success">frame/main.jsp</result>
		</action>
		<action name="userlogin_*" class="loginAction" method="{1}">
			<result name="success">frame/main.jsp</result>
		</action>
		<!-- 组织机构树 -->
		<action name="tree_*" class="treeAction" method="{1}">
		</action>
		<action name="org_*" class="orgAction" method="{1}">
		</action>
	</package>
	<package name="model" extends="struts-default">
		
		<!-- 定义全局处理结果 -->
		<global-results>
			<result name="login">frame/userLogin.jsp</result>
		</global-results>

		
		<action name="meeting*" class="meetingAction">
			<result name="list">meeting.jsp</result>
			<result name="add">meeting_add.jsp</result>
			<result name="edit">meeting_edit.jsp</result>
			<result name="input">meeting_{1}.jsp</result>
		</action>
	</package>

</struts>
